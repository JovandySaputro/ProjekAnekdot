<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_dark">
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:padding="5dp"
            android:onClick="onGoBack"
            android:background="@drawable/circle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_outline_arrow_back_24"
            android:tintMode="multiply"
            android:tint="@color/purple_dark"/>
    <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MiDot"
                android:textAllCaps="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="40sp"
                android:textColor="@color/material_yellow_500"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginTop="0dp"
            android:orientation="vertical">
        <Button
                android:id="@+id/btn_pengertian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"
            android:text="Pengertian"
            android:textColor="@color/purple_dark"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <Button
                android:id="@+id/btn_struktur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back"
                android:text="Struktur Text"
                android:textColor="@color/purple_dark"
                android:textSize="24sp"
                android:textStyle="bold"/>
        <Button
                android:id="@+id/btn_ciri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back"
                android:text="Ciri-ciri Text"
                android:textColor="@color/purple_dark"
                android:textSize="24sp"
                android:textStyle="bold"/>


    </LinearLayout>
</RelativeLayout>